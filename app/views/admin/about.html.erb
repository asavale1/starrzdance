<% provide(:title, "Admin Company")%>
<%= render 'layouts/admin_header' %>

<script type="text/javascript">
	window.onload = function(){
		$('#content').ckeditor();
	};
	$(document).ready($('#content').ckeditor());
</script>

<div class="center hero-unit">
	<h1>Edit Company Info</h1>
	<%= link_to "View page", about_path, :target => "_blank", class: "btn btn-success" %><br /><br />
	<%= render 'layouts/result' %>
	<div>
		<% if @about.nil? %>
			<%= form_tag( { :action => 'about_new' }, :multipart => true) do %>
				<textarea id="content" name="content" rows="25"></textarea><br />
				<%= submit_tag("Create Company Info", class: "btn btn-primary") %>
			<% end%>
		<% end %>

		
		<% unless @about.nil? %>
			<%= form_tag( {:action => 'about_edit'}, :multipart => true) do %>
				<textarea id="content" name="content" rows="25"><%= @about.body %></textarea><br />
				<%= submit_tag("Update Company Info", class: "btn btn-primary") %>
			<% end %>
		<% end %>
		
	</div>
</div>