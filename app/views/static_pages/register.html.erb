<% provide(:title, "Register")%>
<%= render 'layouts/header' %>

<div class="hero-unit">
	<p>Find me in app/views/static_pages/register.html.erb</p>
	<h2>Registration</h2>
	<%= form_tag( { :action => 'register_new' }, :multipart => true) do %>
		<%= label_tag(:student_name, "Student Name") %>
		<%= text_field_tag(:student_name) %>
		<%= label_tag(:parent_name, "Parent Name") %>
		<%= text_field_tag(:parent_name) %>
		<%= label_tag(:email, "Email") %>
		<%= text_field_tag(:email) %>
		<%= label_tag(:phone, "Phone Number") %>
		<%= text_field_tag(:phone) %>
		<%= label_tag(:city, "City") %>
		<%= text_field_tag(:city) %>
		<%= label_tag(:state, "State") %>
		<%= text_field_tag(:state) %>
		<%= label_tag(:zipcode, "Zipcode") %>
		<%= text_field_tag(:zipcode) %>
		<table class="table">
			<tr>
				<th></th>
				<th>Group</th>
				<th>Session</th>
				<th>Time</th>
				<th>Location</th>
				<th>Instructor</th>
				<th>Fee ($)</th>
				<th>Status</th>
			</tr>
			<% @schedule.each do |sched| %>
				<tr>
					<td>
						<%= radio_button_tag(:schedule, sched.id) %>
					</td>
					<td>
						<%= sched.group %>
					</td>
					<td>
						<%= sched.session %>
					</td>
					<td>
						<%= sched.time %>
					</td>
					<td>
						<%= sched.location %>
					</td>
					<td>
						<%= sched.instructor %>
					</td>
					<td>
						$ <%= sched.fee %>
					</td>
					<td>
						<% if sched.capacity == sched.enrolled %>
							Not Available
						<% else %>
							Available
						<% end %>
					</td>
				</tr>
			<% end %>
		</table>
		<%= submit_tag("Register", class: "btn btn-primary") %>
	<% end%>
</div>