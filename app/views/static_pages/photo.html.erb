<% provide(:title, "Photos")%>
<%= render 'layouts/header' %>
<%= stylesheet_link_tag "static_pages/photo.css" %>

<noscript>
	<style>
		.es-carousel ul{
			display:block;
		}
	</style>
</noscript>
<script id="img-wrapper-tmpl" type="text/x-jquery-tmpl">	
	<div class="rg-image-wrapper">
		{{if itemsCount > 1}}
			<div class="rg-image-nav">
				<a href="#" class="rg-image-nav-prev">Previous Image</a>
				<a href="#" class="rg-image-nav-next">Next Image</a>
			</div>
		{{/if}}
		<div class="rg-image"></div>
		<div class="rg-loading"></div>
		<div class="rg-caption-wrapper">
			<div class="rg-caption" style="display:none;">
				<p></p>
			</div>
		</div>
	</div>
</script>


<div class="hero-unit">
	<h2 id="title">Photos</h2>
	<div id="rg-gallery" class="rg-gallery">
		<div class="rg-thumbs">
			<div class="es-carousel-wrapper">
				<div class="es-nav">
					<span class="es-nav-prev">Previous</span>
					<span class="es-nav-next">Next</span>
				</div>
				<div class="es-carousel">
					<ul>
						<% @photo.each do |photo| %>
							<li>
								<a href="#">
									<img src="<%= photo.image.url(:thumb) %>" data-large="<%= photo.image.url %>" alt="image 1" data-description="<%= photo.caption %>" data-title="<%= photo.title %>" />
								</a>
							</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<%= stylesheet_link_tag    "gallery" %>
<%= javascript_include_tag "gallery" %>

<script type="text/javascript">

	$(document).ready(function() {
		$(".fancybox").fancybox({
			'transitionIn'	:	'elastic',
			'transitionOut'	:	'elastic',
			'speedIn'		:	600, 
			'speedOut'		:	200, 
			'overlayShow'	:	true
		});
	});
</script>